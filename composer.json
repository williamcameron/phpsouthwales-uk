{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "^7.4",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^1.27",
        "drupal/adminimal_theme": "^1.5",
        "drupal/advancedqueue": "^1.0@beta",
        "drupal/config_installer": "^1.8",
        "drupal/console": "^1.0.2",
        "drupal/core": "^8.7.0",
        "drupal/features": "^3.8",
        "drupal/hook_event_dispatcher": "^1.25",
        "drupal/migrate_tools": "^4.1",
        "drupal/recreate_block_content": "^2.0",
        "drupal/tailwindcss": "^2.2",
        "drush/drush": "^9.0.0",
        "opdavies/php-helpers": "^0.2.0",
        "platformsh/config-reader": "^2.2",
        "vlucas/phpdotenv": "^2.4",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "drupal/coder": "^8.3",
        "mglaman/phpstan-drupal": "^0.11.9",
        "phpstan/phpstan": "^0.11.8",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "squizlabs/php_codesniffer": "^3.4",
        "webflo/drupal-core-require-dev": "^8.7.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": ["load.environment.php"]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "test-phpcs": "phpcs -v --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules web/modules/custom web/themes/custom",
        "test-phpunit": "phpunit -c tools/phpunit web/modules/custom",
        "test-phpstan": "phpstan analyze",
        "test": [
            "@test-phpcs",
            "@test-phpstan",
            "@test-phpunit"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            }
        },
        "merge-plugin": {
            "include": [
                "web/modules/custom/*/composer.json"
            ]
        },
        "patches": {
        }
    }
}
